@page
@model TheChopClub.Pages.LoginModel
@{
    ViewData["Title"] = "Login - The Chop Club";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="row g-0 shadow-lg" style="border-radius: 0; overflow: hidden;">
                <!-- Lado Esquerdo - Branding -->
                <div class="col-md-6 d-none d-md-block" style="
                    background: linear-gradient(135deg, rgba(13,13,13,0.95), rgba(211,47,47,0.95)),
                                url('https://images.unsplash.com/photo-1503951914875-452162b0f3f1?w=800') center/cover;
                    position: relative;
                ">
                    <div
                        class="d-flex flex-column justify-content-center align-items-center h-100 p-5 text-white text-center">
                        <i class="fas fa-cut fa-5x mb-4" style="color: var(--barber-gold);"></i>
                        <h2 style="font-family: var(--font-display); font-size: 3rem; letter-spacing: 3px;">
                            THE CHOP CLUB
                        </h2>
                        <p
                            style="font-family: var(--font-elegant); font-size: 1.3rem; font-style: italic; color: var(--barber-gold);">
                            Onde a arte encontra<br>o profissionalismo
                        </p>

                        <div class="mt-5">
                            <div class="mb-3">
                                <i class="fas fa-check-circle me-2" style="color: var(--barber-gold);"></i>
                                <span>Comunidade Exclusiva</span>
                            </div>
                            <div class="mb-3">
                                <i class="fas fa-check-circle me-2" style="color: var(--barber-gold);"></i>
                                <span>Zero Comissões</span>
                            </div>
                            <div class="mb-3">
                                <i class="fas fa-check-circle me-2" style="color: var(--barber-gold);"></i>
                                <span>Dashboard Profissional</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lado Direito - Formulário -->
                <div class="col-md-6" style="background: white;">
                    <div class="p-5">
                        <div class="text-center mb-4 d-md-none">
                            <h1 style="font-family: var(--font-display); font-size: 2.5rem; color: var(--barber-dark);">
                                <i class="fas fa-cut" style="color: var(--barber-red);"></i>
                                THE CHOP CLUB
                            </h1>
                        </div>

                        <h2
                            style="font-family: var(--font-elegant); font-size: 2rem; color: var(--barber-dark); margin-bottom: 0.5rem;">
                            Bem-vindo de volta
                        </h2>
                        <p class="text-muted mb-4">Entre na sua conta para continuar</p>

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger fade-in-up" role="alert">
                                <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                            <div class="alert alert-success fade-in-up" role="alert">
                                <i class="fas fa-check-circle"></i> @Model.SuccessMessage
                            </div>
                        }

                        <form method="post">
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope me-2"></i>Email
                                </label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="seu@email.com"
                                    autofocus />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label">
                                    <i class="fas fa-lock me-2"></i>Password
                                </label>
                                <div class="position-relative">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg"
                                        placeholder="••••••••" id="passwordInput" />
                                    <button type="button" onclick="togglePassword()"
                                        style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); border: none; background: none; cursor: pointer;">
                                        <i class="fas fa-eye" id="toggleIcon"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">
                                        Manter sessão
                                    </label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-dark btn-lg w-100 mb-3">
                                <i class="fas fa-sign-in-alt me-2"></i> Entrar
                            </button>

                            <div class="text-center">
                                <p class="mb-0">
                                    Ainda não é membro?
                                    <a asp-page="/Register" class="text-decoration-none fw-bold"
                                        style="color: var(--barber-red);">
                                        Juntar-me ao Clube
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword() {
            const input = document.getElementById('passwordInput');
            const icon = document.getElementById('toggleIcon');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
}