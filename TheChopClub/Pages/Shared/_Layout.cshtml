<!DOCTYPE html>
<html lang="pt" style="height: 100%;">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Chop Club</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>✂️</text></svg>">
</head>

<body>
    <!-- Navbar Premium -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="fas fa-cut"></i> THE CHOP CLUB
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        @{
                            var userId = Context.Session.GetInt32("UserId");
                            var username = Context.Session.GetString("Username");
                            var userType = Context.Session.GetString("UserType");
                        }

                        @if (userId == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">
                                    <i class="fas fa-home"></i> Início
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light" asp-page="/Register">
                                    <i class="fas fa-rocket"></i> Registar
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">
                                    <i class="fas fa-fire"></i> Feed
                                </a>
                            </li>

                            @if (userType == "Barber")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Barbershop/Dashboard">
                                        <i class="fas fa-chart-line"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Barbershop/Index">
                                        <i class="fas fa-store"></i> Minha Barbearia
                                    </a>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                    style="color: var(--barber-gold) !important;">
                                    <i class="fas fa-user-circle"></i> @username
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-page="/Profile/Index">
                                            <i class="fas fa-user"></i> Meu Perfil
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-page="/Logout">
                                            <i class="fas fa-sign-out-alt"></i> Sair
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer Premium e Completo -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <!-- Sobre -->
                <div class="footer-section">
                    <h4><i class="fas fa-cut"></i> THE CHOP CLUB</h4>
                    <p>
                        A plataforma exclusiva que conecta barbeiros profissionais com clientes que valorizam a arte e a
                        excelência.
                    </p>
                    <p class="mb-2">
                        <strong>Porto, Portugal</strong>
                    </p>
                    <div class="footer-social">
                        <a href="#" title="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" title="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" title="Twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" title="YouTube">
                            <i class="fab fa-youtube"></i>
                        </a>
                    </div>
                </div>

                <!-- Links Rápidos -->
                <div class="footer-section">
                    <h4><i class="fas fa-link"></i> NAVEGAÇÃO</h4>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-page="/Index">
                                <i class="fas fa-chevron-right"></i> Página Inicial
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-page="/Register">
                                <i class="fas fa-chevron-right"></i> Criar Conta
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-page="/Login">
                                <i class="fas fa-chevron-right"></i> Login
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#sobre">
                                <i class="fas fa-chevron-right"></i> Sobre Nós
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Para Barbeiros -->
                <div class="footer-section">
                    <h4><i class="fas fa-scissors"></i> PARA BARBEIROS</h4>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#premium">
                                <i class="fas fa-crown"></i> Plano Premium
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#dashboard">
                                <i class="fas fa-chart-bar"></i> Dashboard
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#loja">
                                <i class="fas fa-shopping-bag"></i> Abrir Loja
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#comunidade">
                                <i class="fas fa-users"></i> Comunidade
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Contacto e Suporte -->
                <div class="footer-section">
                    <h4><i class="fas fa-headset"></i> SUPORTE</h4>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-envelope"></i>
                            <a href="mailto:suporte@chopclub.com">
                                suporte@chopclub.com
                            </a>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-phone"></i>
                            <a href="tel:+351910000000">
                                +351 910 000 000
                            </a>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-clock"></i>
                            Seg-Sex: 9h-18h
                        </li>
                        <li class="mb-2">
                            <a href="#faq">
                                <i class="fas fa-question-circle"></i> FAQ
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#termos">
                                <i class="fas fa-file-contract"></i> Termos de Uso
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Barra Inferior -->
            <div class="footer-bottom">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        <p class="mb-0">
                            &copy; @DateTime.Now.Year <strong>The Chop Club</strong>. Todos os direitos reservados.
                        </p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <p class="mb-0">
                            Desenvolvido com <i class="fas fa-heart text-danger"></i> e
                            <i class="fas fa-coffee" style="color: var(--barber-gold);"></i> em Portugal
                        </p>
                    </div>
                </div>

                <!-- Certificações e Badges (opcional) -->
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <div class="d-inline-flex gap-3 flex-wrap justify-content-center">
                            <span class="badge" style="background: var(--barber-grey); padding: 0.5rem 1rem;">
                                <i class="fas fa-shield-alt"></i> Pagamentos Seguros
                            </span>
                            <span class="badge" style="background: var(--barber-grey); padding: 0.5rem 1rem;">
                                <i class="fas fa-lock"></i> SSL Certificado
                            </span>
                            <span class="badge" style="background: var(--barber-grey); padding: 0.5rem 1rem;">
                                <i class="fas fa-check-circle"></i> 100% Verificado
                            </span>
                            <span class="badge" style="background: var(--barber-grey); padding: 0.5rem 1rem;">
                                <i class="fas fa-star"></i> 5 Estrelas
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Scroll to Top Button -->
    <button id="scrollToTop" style="
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 50px;
        height: 50px;
        background: var(--barber-red);
        color: white;
        border: none;
        border-radius: 0;
        cursor: pointer;
        display: none;
        z-index: 999;
        transition: 0.3s;
        box-shadow: var(--shadow-lg);
    " onclick="scrollToTop()">
        <i class="fas fa-arrow-up"></i>
    </button>

    <script>
        // Scroll to Top Button
        window.onscroll = function () {
            const scrollBtn = document.getElementById('scrollToTop');
            if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
                scrollBtn.style.display = 'block';
            } else {
                scrollBtn.style.display = 'none';
            }
        };

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        // Hover effect no botão
        document.getElementById('scrollToTop').addEventListener('mouseenter', function () {
            this.style.transform = 'translateY(-5px)';
        });

        document.getElementById('scrollToTop').addEventListener('mouseleave', function () {
            this.style.transform = 'translateY(0)';
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
